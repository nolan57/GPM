<UserControl x:Class="GPM.Views.GanttChartContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GPM.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#F0F2F5">
        <!-- 甘特图主区域 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 时间轴控制栏 -->
        <Border Grid.Row="0" Background="#E0E0E0" BorderThickness="0,0,0,1" BorderBrush="#D0D0D0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="50,0,0,0">
                <Button x:Name="BtnDay" Content="日" Style="{StaticResource TimeScaleButtonStyle}" Click="TimeScaleButton_Click" Margin="0,0,2,0"/>
                <Button x:Name="BtnWeek" Content="周" Style="{StaticResource TimeScaleButtonStyle}" Click="TimeScaleButton_Click" Margin="0,0,2,0"/>
                <Button x:Name="BtnMonth" Content="月" Style="{StaticResource TimeScaleButtonStyle}" Click="TimeScaleButton_Click" Margin="0,0,2,0"/>
                <Button x:Name="BtnQuarter" Content="季" Style="{StaticResource TimeScaleButtonStyle}" Click="TimeScaleButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- 甘特图主体区域 -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="0,0,4,4">
            <ScrollViewer x:Name="GanttScrollViewer" Background="Transparent" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!-- 时间轴 -->
                    <local:TimeScaleControl x:Name="TimeScale" Width="{Binding TimeScaleWidth, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                           TimeScaleType="{Binding TimeScaleType, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}"/>
                    
                    <!-- 网格线 -->
                    <local:GridLineControl x:Name="GridLines" Width="{Binding TimeScaleWidth, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                          CanvasHeight="{Binding CanvasHeight, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                          TimeScaleType="{Binding TimeScaleType, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                          TasksCount="{Binding TasksCount, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                          TaskHeight="{Binding TaskHeight, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}"/>
                    
                    <!-- 任务条 -->
                    <local:TaskBarControl x:Name="TaskBars" Width="{Binding TimeScaleWidth, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                         CanvasHeight="{Binding CanvasHeight, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                         TimeScaleType="{Binding TimeScaleType, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                         TaskHeight="{Binding TaskHeight, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                         IsHierarchical="{Binding IsHierarchical, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}" 
                                         ShowTaskLabels="{Binding ShowTaskLabels, RelativeSource={RelativeSource AncestorType=local:GanttChartContainer}}"/>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>