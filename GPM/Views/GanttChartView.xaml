<UserControl x:Class="GPM.Views.GanttChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPM.Views"
             xmlns:converters="clr-namespace:GPM.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:SubtractConverter x:Key="SubtractConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 时间轴控制栏 -->
        <Border Grid.Row="0" Background="White" CornerRadius="4" Effect="{DynamicResource StandardShadow}" Margin="10" Padding="5">
            <StackPanel Orientation="Horizontal">
                <Button Content="日" Style="{StaticResource TimeScaleButtonStyle}" Click="TimeScaleButton_Click" Tag="Day"/>
                <Button Content="周" Style="{StaticResource TimeScaleButtonStyle}" Click="TimeScaleButton_Click" Tag="Week"/>
                <Button Content="月" Style="{StaticResource TimeScaleButtonStyle}" Click="TimeScaleButton_Click" Tag="Month"/>
                <Button Content="季度" Style="{StaticResource TimeScaleButtonStyle}" Click="TimeScaleButton_Click" Tag="Quarter"/>
            </StackPanel>
        </Border>
   <!-- 甘特图主体区域 -->
        <Grid Grid.Row="1" Margin="10">
            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Effect="{DynamicResource StandardShadow}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="Transparent">
                    <local:GanttChartContainer 
                        x:Name="GanttContainer"
                        CanvasWidth="{Binding CanvasWidth, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        CanvasHeight="{Binding CanvasHeight, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        CanvasBackground="{Binding CanvasBackground, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        DefaultTimeScale="{Binding DefaultTimeScale, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        ShowTaskHierarchy="{Binding ShowTaskHierarchy, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        HierarchyIndentation="{Binding HierarchyIndentation, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        ParentTaskBackground="{Binding ParentTaskBackground, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        ChildTaskBackground="{Binding ChildTaskBackground, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        ParentTaskHeight="{Binding ParentTaskHeight, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                        ChildTaskHeight="{Binding ChildTaskHeight, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"
                    />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>