<UserControl x:Class="GPM.Views.GanttChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPM.Views"
             xmlns:converters="clr-namespace:GPM.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:SubtractConverter x:Key="SubtractConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 时间轴控制栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="日" Margin="5" Click="TimeScaleButton_Click" Tag="Day"/>
            <Button Content="周" Margin="5" Click="TimeScaleButton_Click" Tag="Week"/>
            <Button Content="月" Margin="5" Click="TimeScaleButton_Click" Tag="Month"/>
            <Button Content="季度" Margin="5" Click="TimeScaleButton_Click" Tag="Quarter"/>
        </StackPanel>
        
        <!-- 甘特图主体区域 -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="GanttCanvas" Width="{Binding CanvasWidth, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}" 
                    Height="{Binding CanvasHeight, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}" 
                    Background="{Binding CanvasBackground, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}">
                <!-- 时间轴刻度 -->
                <Canvas x:Name="TimeScaleCanvas" Height="30" 
                        Width="{Binding CanvasWidth, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}" 
                        Background="{Binding TimeScaleBackground, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}"/>
                
                <!-- 任务区域 -->
                <Canvas x:Name="TaskCanvas" 
                        Height="{Binding CanvasHeight, Converter={StaticResource SubtractConverter}, ConverterParameter=30, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}" 
                        Width="{Binding CanvasWidth, RelativeSource={RelativeSource AncestorType=local:GanttChartView}}" 
                        Margin="0,30,0,0"/>
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>