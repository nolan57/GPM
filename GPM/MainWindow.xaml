<Window x:Class="GPM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:GPM"
        xmlns:views="clr-namespace:GPM.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="768" Width="1366">
    <DockPanel>
        <!-- 顶部标题栏 -->
        <Border DockPanel.Dock="Top" Background="#2c3e50" Height="60">
            <TextBlock Text="{Binding Title}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Foreground="White"/>
        </Border>
        
        <!-- 左侧导航菜单 -->
        <Border DockPanel.Dock="Left" Background="#34495e" Width="200">
            <ItemsControl ItemsSource="{Binding NavigationItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Title}" 
                                Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                CommandParameter="{Binding ViewName}"
                                Width="180" Height="40" Margin="10" 
                                HorizontalContentAlignment="Left" 
                                Background="{Binding IsSelected, Converter={StaticResource BoolToBrushConverter}}"
                                Foreground="White"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
        
        <!-- 主内容区域 - 导航容器 -->
        <ContentControl>
            <prism:RegionManager.RegionName>
                <x:Static Member="local:Regions.MainContentRegion"/>
            </prism:RegionManager.RegionName>
        </ContentControl>
    </DockPanel>
</Window>
