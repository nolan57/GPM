<UserControl x:Class="GanttChartFramework.Views.TimeScaleTickControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="60">
    <Grid x:Name="TickContainer">
        <!-- 默认刻度形状 - 垂直线条 -->
        <Line x:Name="DefaultTickLine" 
              X1="30" Y1="0" X2="30" Y2="30"
              Stroke="{Binding TickStroke, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeThickness="{Binding TickThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeDashArray="{Binding TickDashArray, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        
        <!-- 文本标签 -->
        <TextBlock x:Name="TickLabel" 
                   Text="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontSize="{Binding LabelFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="{Binding LabelForeground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,5"/>
    </Grid>
</UserControl>