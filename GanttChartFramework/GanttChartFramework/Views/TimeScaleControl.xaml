<UserControl x:Class="GanttChartFramework.Views.TimeScaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GanttChartFramework.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="TimeScaleCanvas" Height="30" Background="{Binding Background, RelativeSource={RelativeSource AncestorType=local:TimeScaleControl}}"/>
    </Grid>
</UserControl>