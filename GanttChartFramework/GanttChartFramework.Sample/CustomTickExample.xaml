<Window x:Class="GanttChartFramework.Sample.CustomTickExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GanttChartFramework.Views;assembly=GanttChartFramework"
        Title="Custom Tick Example" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 控制面板 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="三角形刻度" Click="TriangleTicks_Click" Margin="5"/>
            <Button Content="圆形刻度" Click="CircleTicks_Click" Margin="5"/>
            <Button Content="菱形刻度" Click="DiamondTicks_Click" Margin="5"/>
            <Button Content="恢复默认" Click="ResetTicks_Click" Margin="5"/>
        </StackPanel>
        
        <!-- 时间轴显示区域 -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <views:TimeScaleControl x:Name="TimeScale" 
                                  TimeScaleType="Day"
                                  Width="1800"
                                  Background="#F8F9FA"
                                  Foreground="#2C3E50"/>
        </Border>
        
        <!-- 状态信息 -->
        <TextBlock Grid.Row="2" Margin="10" Text="点击上方按钮切换不同的刻度形状示例"
                   HorizontalAlignment="Center" FontStyle="Italic"/>
    </Grid>
</Window>