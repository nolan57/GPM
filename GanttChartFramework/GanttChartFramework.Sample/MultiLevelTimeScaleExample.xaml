<Window x:Class="GanttChartFramework.Sample.MultiLevelTimeScaleExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttChartFramework.Sample"
        xmlns:views="clr-namespace:GanttChartFramework.Views;assembly=GanttChartFramework"
        mc:Ignorable="d"
        Title="多级时间刻度示例" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 控制面板 -->
        <StackPanel Grid.Row="0" Margin="10" Orientation="Horizontal">
            <Button x:Name="ShowDefaultMultiLevel" Content="显示默认多级刻度" Margin="5" Click="ShowDefaultMultiLevel_Click"/>
            <Button x:Name="ShowCustomConfig" Content="显示自定义配置" Margin="5" Click="ShowCustomConfig_Click"/>
            <Button x:Name="ToggleOrientation" Content="切换布局方向" Margin="5" Click="ToggleOrientation_Click"/>
            <Button x:Name="ClearTimeScale" Content="清除时间轴" Margin="5" Click="ClearTimeScale_Click"/>
        </StackPanel>
        
        <!-- 配置选项 -->
        <StackPanel Grid.Row="1" Margin="10">
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="ShowYearCheck" Content="显示年" Margin="5" IsChecked="True"/>
                <CheckBox x:Name="ShowQuarterCheck" Content="显示季度" Margin="5" IsChecked="True"/>
                <CheckBox x:Name="ShowMonthCheck" Content="显示月" Margin="5" IsChecked="True"/>
                <CheckBox x:Name="ShowWeekCheck" Content="显示周" Margin="5" IsChecked="True"/>
                <CheckBox x:Name="ShowDayCheck" Content="显示日" Margin="5" IsChecked="True"/>
                <CheckBox x:Name="ShowTimeCheck" Content="显示时间" Margin="5" IsChecked="False"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="文本对齐: " VerticalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="TextAlignmentComboBox" Width="100" SelectedIndex="1">
                    <ComboBoxItem Content="Left"/>
                    <ComboBoxItem Content="Center"/>
                    <ComboBoxItem Content="Right"/>
                </ComboBox>
                
                <TextBlock Text="左边距: " VerticalAlignment="Center" Margin="20,0,5,0"/>
                <Slider x:Name="LeftMarginSlider" Width="80" Minimum="0" Maximum="10" Value="0"/>
                <TextBlock Text="{Binding Value, ElementName=LeftMarginSlider, StringFormat={}{0:F0}}" Width="20" VerticalAlignment="Center"/>
                
                <TextBlock Text="右边距: " VerticalAlignment="Center" Margin="10,0,5,0"/>
                <Slider x:Name="RightMarginSlider" Width="80" Minimum="0" Maximum="10" Value="0"/>
                <TextBlock Text="{Binding Value, ElementName=RightMarginSlider, StringFormat={}{0:F0}}" Width="20" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
        <!-- 时间轴容器 -->
        <Border Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1" Background="White">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <views:TimeScaleControl x:Name="TimeScaleControl" 
                                      Width="2000" 
                                      Height="60"
                                      Background="LightGray"
                                      Foreground="Black"
                                      FontSize="12"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>