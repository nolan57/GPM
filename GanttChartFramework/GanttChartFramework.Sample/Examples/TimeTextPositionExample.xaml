<Window x:Class="GanttChartFramework.Sample.Examples.TimeTextPositionExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:GanttChartFramework.Views;assembly=GanttChartFramework"
        Title="时间文本位置控制示例" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 控制面板 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="水平对齐: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="HorizontalAlignmentComboBox" Width="120" SelectedIndex="0">
                <ComboBoxItem Content="Left"/>
                <ComboBoxItem Content="Center"/>
                <ComboBoxItem Content="Right"/>
                <ComboBoxItem Content="Stretch"/>
            </ComboBox>
            
            <TextBlock Text="左边距: " VerticalAlignment="Center" Margin="20,0,10,0"/>
            <Slider x:Name="LeftMarginSlider" Width="100" Minimum="0" Maximum="20" Value="0"/>
            <TextBlock Text="{Binding Value, ElementName=LeftMarginSlider, StringFormat={}{0:F0}}" Width="30" VerticalAlignment="Center"/>
            
            <TextBlock Text="右边距: " VerticalAlignment="Center" Margin="20,0,10,0"/>
            <Slider x:Name="RightMarginSlider" Width="100" Minimum="0" Maximum="20" Value="0"/>
            <TextBlock Text="{Binding Value, ElementName=RightMarginSlider, StringFormat={}{0:F0}}" Width="30" VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- 示例1: 标准居中 -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock Text="示例1: 标准居中" FontWeight="Bold" Margin="0,0,0,5"/>
                <views:MultiLevelTimeScaleTick 
                    YearText="2024"
                    QuarterText="Q1"
                    MonthText="3月"
                    DayText="15日"
                    Width="100" Height="60"/>
            </StackPanel>
        </Border>
        
        <!-- 示例2: 左对齐 -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock Text="示例2: 左对齐" FontWeight="Bold" Margin="0,0,0,5"/>
                <views:MultiLevelTimeScaleTick 
                    YearText="2024"
                    QuarterText="Q1"
                    MonthText="3月"
                    DayText="15日"
                    YearHorizontalAlignment="Left"
                    QuarterHorizontalAlignment="Left"
                    MonthHorizontalAlignment="Left"
                    DayHorizontalAlignment="Left"
                    Width="100" Height="60"/>
            </StackPanel>
        </Border>
        
        <!-- 示例3: 可交互控制 -->
        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock Text="示例3: 可交互控制" FontWeight="Bold" Margin="0,0,0,5"/>
                <views:MultiLevelTimeScaleTick x:Name="InteractiveTick"
                    YearText="2024"
                    QuarterText="Q1"
                    MonthText="3月"
                    DayText="15日"
                    Width="100" Height="60"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>