<Window x:Class="GanttChartFramework.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttChartFramework.Sample"
        xmlns:gantt="clr-namespace:GanttChartFramework.Views;assembly=GanttChartFramework"
        mc:Ignorable="d"
        Title="甘特图框架示例" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="自定义刻度示例" Click="CustomTicks_Click" Margin="5" Padding="10,5"/>
            <Button Content="多级时间刻度示例" Click="MultiLevelTimeScale_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
        
        <!-- 甘特图容器 -->
        <gantt:GanttChartContainer Grid.Row="1" x:Name="GanttChart" />
    </Grid>
</Window>